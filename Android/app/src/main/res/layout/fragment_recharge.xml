<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.RechargeFragment">

    <include
        android:id="@+id/navi"
        layout="@layout/fragment_navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="556dp"
        android:layout_height="394dp"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="포인트 충전"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="금액 입력" />

        <EditText
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="number"
            android:text="0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제수단"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="552dp"
            android:layout_height="92dp"
            android:layout_marginBottom="320dp"
            android:background="#FDF6FE"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toss"
                android:layout_width="264dp"
                android:layout_height="95dp"
                android:background="#FDF6FE"
                android:contentDescription="@string/toss"
                android:src="@drawable/toss_logo_primary" />

            <ImageView
                android:id="@+id/kakaopay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/kakaopay"
                android:src="@drawable/payment_icon_yellow_small" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>